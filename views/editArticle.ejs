<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- tailwind CSS -->
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">

    <title>Edit your article</title>
</head>

<body>
    <!-- tailwind blog edit form -->

    <div class="container text-gray-400 bg-gray-900 body-font min-w-full min-h-screen">
        <div
            class="container mx-auto flex flex-wrap flex-col px-5 py-3 items-center justify-content-center">
            <h2 class="text-2xl font-bold leading-7 text-gray-200 sm:text-3xl sm:truncate">
                Editing Blog
            </h2>
            <form action="/articles/edit/<%= thisArticle.id %>?_method=PUT" method="post" class="min-w-full">
                <div class="relative mb-4">
                    <label for="title" class="leading-7 text-sm text-gray-400">Blog Category</label>
                    <select id="category" name="category"
                        class="w-full bg-gray-800 rounded border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                        <option class="py-1">Programming</option>
                        <option class="py-1">Business</option>
                        <option class="py-1">Stokes</option>
                    </select>
                </div>
                <div class="relative mb-4">
                    <label for="title" class="leading-7 text-sm text-gray-400">Blog Title</label>
                    <input type="text" id="title" name="title" value="<%= thisArticle.title %>"
                        class="w-full bg-gray-800 rounded border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="relative mb-4">
                    <label for="description" class="leading-7 text-sm text-gray-400">Blog Description</label>
                    <input type="text" id="description" name="description" value="<%= thisArticle.description %>"
                        class="w-full bg-gray-800 rounded border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="relative mb-4">
                    <label for="content" class="leading-7 text-sm text-gray-400">Blog Content</label>
                    <textarea id="content" name="content"
                        class="w-full bg-gray-800 rounded border border-gray-700 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-900 h-60 text-base outline-none text-gray-100 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"><%= thisArticle.content %></textarea>
                </div>
                <button type="submit"
                    class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Save</button>
                <a href="/"
                    class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Cancel</a>
            </form>
        </div>
    </div>



    <!-- tailwind blog edit form end -->
    
</body>

</html>